<div id="container">
  <!-- Pulsing circles -->
  <div class="circle" style="animation-delay: -3s"></div>
  <div class="circle" style="animation-delay: -2s"></div>
  <div class="circle" style="animation-delay: -1s"></div>
  <div class="circle" style="animation-delay: 0s"></div>

  <!-- Add to Cart icon in the center -->
  <div class="icon-container  ">
    <svg viewBox="0 0 32 32" fill="none" stroke="black" stroke-width="2" style="transform: scale(0.55);">
      <path d="M10 9C10 9 10 3 16 3C22 3 22 9 22 9M5 9V29H27V9H5Z" stroke-linecap="round" stroke-linejoin="round"/>
      <path d="M16 15V23M12 19H20" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  </div>
</div>

<style>
  /* General container styling */
  #container {
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
  }

  /* Styling for the pulsing circles */
  .circle {
    border-radius: 50%;
    background-color: white;
    width: 38px;
    height: 38px;
    position: absolute;
    opacity: 0;
    animation: scaleIn 5s infinite cubic-bezier(0.36, 0.11, 0.89, 0.32);
  }

  /* Keyframes for the pulsing animation */
  @keyframes scaleIn {
    from {
      transform: scale(0.4, 0.4);
      opacity: 0.9;
    }
    to {
      transform: scale(1.3, 1.3);
      opacity: 0.1;
    }
  }

  /* Styling for the Add to Cart icon container */
  .icon-container {
    z-index: 100;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: white;
    border-radius: 50%;
    width: 30px;
    height: 30px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  /* Styling for the Add to Cart icon */
  .icon-container i {
    font-size: 3rem;
    color: deepskyblue;
  }
</style>
