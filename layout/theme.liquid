<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="">
    <link rel="canonical" href="{{ canonical_url }}">
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>

    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32 }}">
    {%- endif -%}

    {%- unless settings.type_header_font.system? and settings.type_body_font.system? -%}
      <link rel="preconnect" href="https://fonts.shopifycdn.com" crossorigin>
    {%- endunless -%}

    <title>
      {{ page_title }}
      {%- if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif -%}
      {%- if current_page != 1 %} &ndash; Page {{ current_page }}{% endif -%}
      {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
    </title>

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    {% render 'meta-tags' %}

    <script src="{{ 'global.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'quick-view.js' | asset_url }}" defer="defer"></script>
    {{ content_for_header }}

    {% render 'head-styles' %}

    {{ 'app.css' | asset_url | stylesheet_tag }}
    {{ 'global.css' | asset_url | stylesheet_tag }}

    {% unless template.name == 'product' %}
      {{ 'blur-load.css' | asset_url | stylesheet_tag }}
      <script src="{{ 'blur-load.js' | asset_url }}" defer="defer"></script>
    {% endunless %}

    <script type="application/json" data-ajax-cart-initial-state>
      {{ cart | json }}
    </script>

    <script type="module">
      import '{{ "liquid-ajax-cart-v2.1.1.js" | asset_url }}';
    </script>

    <script src="{{ 'app.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'predictive-search.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'global.js' | asset_url }}" defer="defer"></script>

    <style>
      h1, h2, h3, h4, h5, h6 {
        font-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
        font-weight: {{ settings.type_header_font.weight }};
        font-style: {{ settings.type_header_font.style }};
      }

      button, .btn {
        font-family: {{ settings.type_button_font.family }}, {{ settings.type_button_font.fallback_families }};
        font-weight: {{ settings.type_button_font.weight }};
        font-style: {{ settings.type_button_font.style }};
      }
    </style>

    <style>
      {%- unless settings.type_body_font.system? -%}
        {{ settings.type_body_font | font_face }}
      {%- endunless -%}

      {%- unless settings.type_header_font.system? -%}
        {{ settings.type_header_font | font_face }}
      {%- endunless -%}

      {% unless settings.type_button_font.system? %}
        {{ settings.type_button_font | font_face }}
      {% endunless %}
    </style>

    <script>
      document.documentElement.className = document.documentElement.className.replace('no-js', 'js');
      if (Shopify.designMode) {
        document.documentElement.classList.add('shopify-design-mode');
      }
    </script>
  </head>

  <body class="gradient">
    <a class="skip-to-content-link button sr-only" href="#MainContent">
      {{ 'accessibility.skip_to_text' | t }}
    </a>
    {% unless template == '404' %}
      {% section 'announcement-bar' %}
      {% section 'header' %}
      {% render 'cart-drawer' %}
    {% endunless %}

    <main id="MainContent" class=" content-for-layout focus-none" role="main" tabindex="-1">
      {{ content_for_layout }}
    </main>

    {% unless template == '404' %}
      {% section 'footer' %}
    {% endunless %}

    <ul hidden>
      <li id="a11y-refresh-page-message">{{ 'accessibility.refresh_page' | t }}</li>
    </ul>

    {% render 'footer-scripts' %}

    {%- if settings.predictive_search_enabled -%}
      <script src="{{ 'predictive-search.js' | asset_url }}" defer="defer"></script>
    {%- endif -%}
  </body>
</html>
