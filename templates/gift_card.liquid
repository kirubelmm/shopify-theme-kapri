{% layout none %}

<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <script src="{{ 'vendor/qrcode.js' | shopify_asset_url }}" defer></script>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="{{ settings.color_background }}">
    <link rel="canonical" href="{{ canonical_url }}">
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>

    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32 }}">
    {%- endif -%}

    <meta name="description" content="{{ 'gift_cards.issued.subtext' | t }}">

    {{ content_for_header }}

    {% style %}
      :root {
        --color-text: {{ settings.colors_text.red }}, {{ settings.colors_text.green }}, {{ settings.colors_text.blue }};
        --color-background: {{ settings.colors_background_1.red }}, {{ settings.colors_background_1.green }}, {{ settings.colors_background_1.blue }};
        --button-radius: {{ settings.buttons_radius }}px;
      }
    {% endstyle %}

    {{ 'app.css' | asset_url | stylesheet_tag }}
  </head>

  <body class="min-h-screen bg-gray-100 text-gray-800">
    <header class="text-center py-8"></header>

    <main class="flex flex-col space-y-4 items-center">
      <div class="max-w-xs ">
        <img
          src="{{ 'gift-card/card.svg' | shopify_asset_url }}"
          alt="{{ 'gift_cards.issued.add_to_apple_wallet' | t }}"
          class="w-full h-full object-contain"
          height="400"
          width="600"
        >
      </div>

      <h1 class="text-1xl font-bold">{{ 'gift_cards.issued.subtext' | t }}</h1>

      <div class="text-xl ">
        {% if gift_card.enabled == false or gift_card.expired %}
          <p class="inline-block bg-red-500 text-white py-1 px-4 rounded-full">{{ 'gift_cards.issued.expired' | t }}</p>
        {% endif %}
      </div>
      {%- if gift_card.balance != gift_card.initial_value -%}
        <p class="text-sm text-gray-600">{{ 'gift_cards.issued.remaining_html' | t: balance: gift_card.balance }}</p>
      {%- endif -%}

      <div class="w-full max-w-xs">
        <input
          type="text"
          class="w-full text-center text-lg py-2 border border-gray-300 rounded-lg bg-white"
          value="{{ gift_card.code | format_code }}"
          aria-label="{{ 'gift_cards.issued.gift_card_code' | t }}"
          readonly
        >
        <div class="my-4 flex justify-between items-center ">
          <div>
            <p>
              {% if settings.currency_code_enabled %}
                <p class="inline-block  text-black py-1 px-4 rounded-full">
                  {{ gift_card.initial_value | money_with_currency }}
                </p>
              {% else %}
                {{ gift_card.initial_value | money }}
              {% endif %}
            </p>
          </div>

          <button class="text-blue-600 hover:underline px-4 gift-card__copy-link">
            {{ 'gift_cards.issued.copy_code' | t }}
          </button>
        </div>
        {%- if gift_card.pass_url -%}
          <a href="{{ gift_card.pass_url }}" class="block mt-4 text-center">
            <img
              src="{{ 'gift-card/add-to-apple-wallet.svg' | shopify_asset_url }}"
              width="120"
              height="40"
              alt="{{ 'gift_cards.issued.add_to_apple_wallet' | t }}"
              class="mx-auto"
              loading="lazy"
            >
          </a>
        {%- endif -%}
      </div>

      <div class="flex space-x-4 mt-6">
        <a
          href="{{ shop.url }}"
          target="_blank"
          class="px-6 py-2 bg-black text-white hover:bg-opacity-100 bg-opacity-85 transition"
          rel="noopener"
        >
          {{- 'gift_cards.issued.shop_link' | t -}}
        </a>
        <button
          class="px-6 py-2 border-2 border-black border-opacity-85 hover:border-opacity-85 text-black  transition"
          onclick="window.print();"
        >
          {{ 'gift_cards.issued.print_gift_card' | t }}
        </button>
      </div>

      <div class="gift-card__qr-code w-32 py-4" data-identifier="{{ gift_card.qr_identifier }}"></div>
    </main>

    <div hidden>
      <span id="a11y-new-window-message">{{ 'accessibility.link_messages.new_window' | t }}</span>
    </div>

    <script>
      var string = { qrImageAlt: {{ 'gift_cards.issued.qr_image_alt' | t | json }} };
      document.addEventListener('DOMContentLoaded', function() {
        new QRCode(document.querySelector('.gift-card__qr-code'), {
          text: document.querySelector('.gift-card__qr-code').dataset.identifier,
          width: 120,
          height: 120,
          imageAltText: string.qrImageAlt
        });
      });

      var template = document.getElementsByTagName("template")[0];
      var clonedTemplate = template.content.cloneNode(true);

      var isMessageDisplayed = false;
      document.querySelector('.gift-card__copy-link').addEventListener('click', () => {
        navigator.clipboard.writeText(document.querySelector('.gift-card__number').value).then(function() {
          if (!isMessageDisplayed) {
            document.querySelector('.gift-card__copy-success').appendChild(clonedTemplate);
            isMessageDisplayed = true;
          }
        });
      });
    </script>
  </body>
</html>
